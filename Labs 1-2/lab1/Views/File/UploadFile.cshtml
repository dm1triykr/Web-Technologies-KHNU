@using lab1.Models.Home;
@using lab1.Models.File;

@model UploadFileViewModel;

@{
    Layout = "";
    ViewData["Title"] = "Uploading Files";
}

<form asp-action="Upload" asp-controller="File" enctype="multipart/form-data" method="post">
    <p>Введіть назву для файла:</p> <br />
    <input type="text" asp-for="Name" /> <br> <br>
    <p>Виберіть файл:</p> <br />
    <input type="file" asp-for="File" /> <br> <br>
    <input type="submit" value="Upload" /> <br> <br>
</form>